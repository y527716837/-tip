/* pages/home/home.wxss */
/* 搜索框 */
.round{
  border-radius:100rpx;
} 
.search-form{
  width: 74%;
  height: 30px;
  margin: 20px auto;
  font-family: 'Microsoft YaHei';
  font-size: 14px;
  border: 1px solid #e2e2e2;
}
.search-img{
  width: 30px;
  height: 30px;
  float: left;
  margin-left: 5px;
}
.search-img image{
  width: 100%;
  height: 100%;
}
.search-form input{
  /* border: 1px solid #e2e2e2; */
  height: 30px;
  width: 200px;
  float: left;
  padding:0 0 0 8px;
  min-height: 0px;
}
.placeholder-search{
  position: absolute;
}
/* 页面主体 */
#main{
  margin: 0 auto;
}
/* swiper {
  padding-top: 30px;
} */
.le-img {
  /* width: 100%; */
  width: 100%;
  display: block;
  transform: scale(0.8);
  transition: all 0.3s ease;
  border-radius: 6px;
}
.le-img.le-active {
  transform: scale(1);
}
.waste-detail{
  margin: 20px auto;
  width: 90%;
  height: 100px;
}
.border{
  height:30px;
  text-align: center;
}
.waste-title{
  line-height: 30px;
  color: white;
  font-size:15px;
}
.info{
  padding: 0px 10px;
  overflow-wrap: break-word;
  font-size:15px;
  margin:10px 0; 
}